<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ðŸ”¥ APEX TRADER - Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
            color: #fff;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        header {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px 0;
            border-bottom: 2px solid #ff6b35;
        }

        h1 {
            font-size: 3em;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #ff6b35, #f7931e);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .subtitle {
            color: #8892b0;
            font-size: 1.2em;
        }

        .status-bar {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 107, 53, 0.3);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .status-indicator {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #4ade80;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .refresh-btn {
            background: linear-gradient(45deg, #ff6b35, #f7931e);
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s;
        }

        .refresh-btn:hover {
            transform: scale(1.05);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 107, 53, 0.2);
            border-radius: 10px;
            padding: 20px;
            transition: transform 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            border-color: rgba(255, 107, 53, 0.5);
        }

        .stat-label {
            color: #8892b0;
            font-size: 0.9em;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-value {
            font-size: 2.5em;
            font-weight: bold;
            color: #ff6b35;
        }

        .stat-subtext {
            color: #8892b0;
            font-size: 0.85em;
            margin-top: 5px;
        }

        .section {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 107, 53, 0.2);
            border-radius: 10px;
            padding: 25px;
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 1.5em;
            margin-bottom: 20px;
            color: #ff6b35;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .position-card {
            background: rgba(255, 107, 53, 0.1);
            border: 2px solid #ff6b35;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .position-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .position-symbol {
            font-size: 1.8em;
            font-weight: bold;
            color: #ff6b35;
        }

        .position-score {
            background: rgba(255, 255, 255, 0.1);
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9em;
        }

        .position-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
        }

        .position-detail {
            text-align: center;
        }

        .position-detail-label {
            color: #8892b0;
            font-size: 0.85em;
            margin-bottom: 5px;
        }

        .position-detail-value {
            font-size: 1.3em;
            font-weight: bold;
        }

        .trades-table {
            width: 100%;
            border-collapse: collapse;
        }

        .trades-table th {
            background: rgba(255, 107, 53, 0.2);
            padding: 12px;
            text-align: left;
            font-weight: 600;
            color: #ff6b35;
        }

        .trades-table td {
            padding: 12px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .trades-table tr:hover {
            background: rgba(255, 255, 255, 0.05);
        }

        .profit-positive {
            color: #4ade80;
        }

        .profit-negative {
            color: #f87171;
        }

        .mode-badge {
            background: rgba(255, 107, 53, 0.2);
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9em;
            font-weight: bold;
        }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #8892b0;
            font-size: 1.1em;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>ðŸ”¥ APEX TRADER</h1>
            <p class="subtitle">0.5% Profit Target | Top 100 Crypto Trading Bot</p>
        </header>

        <div class="status-bar">
            <div class="status-indicator">
                <div class="status-dot"></div>
                <span id="status-text">System Online</span>
                <span class="mode-badge" id="mode-badge">DRY RUN</span>
            </div>
            <div>
                <span style="color: #8892b0; margin-right: 20px;">Last update: <span id="last-update">Never</span></span>
                <button class="refresh-btn" onclick="refreshData()">ðŸ”„ Refresh Data</button>
            </div>
        </div>

        <!-- Current Position -->
        <div class="section" id="position-section" style="display: none;">
            <div class="section-title">ðŸ“Š Current Position</div>
            <div class="position-card" id="position-card">
                <!-- Position details will be inserted here -->
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">ðŸŽ¯ Trades Today</div>
                <div class="stat-value" id="trades-today">0</div>
                <div class="stat-subtext">Total trades executed</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">âœ… Win Rate</div>
                <div class="stat-value" id="win-rate">0%</div>
                <div class="stat-subtext">Winning trades ratio</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">ðŸ’° Today's P&L</div>
                <div class="stat-value" id="daily-pnl">$0.00</div>
                <div class="stat-subtext">Net profit/loss today</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">ðŸ“ˆ All-Time P&L</div>
                <div class="stat-value" id="total-pnl">$0.00</div>
                <div class="stat-subtext">Total profit/loss</div>
            </div>
        </div>

        <!-- Recent Trades -->
        <div class="section">
            <div class="section-title">ðŸ“‹ Recent Trades</div>
            <div id="trades-container">
                <div class="no-data">No trades yet. Waiting for opportunities...</div>
            </div>
        </div>
    </div>

    <script>
        const API_URL = window.location.hostname === 'localhost' 
            ? 'http://localhost:10000' 
            : 'https://apex-trader.onrender.com';  // Update with your deployed URL

        async function fetchData() {
            try {
                const response = await fetch(`${API_URL}/status`);
                const data = await response.json();
                updateDashboard(data);
                
                // Fetch recent trades
                const tradesResponse = await fetch(`${API_URL}/trades/recent?limit=10`);
                const tradesData = await tradesResponse.json();
                updateTrades(tradesData.trades);
                
                document.getElementById('last-update').textContent = new Date().toLocaleTimeString();
            } catch (error) {
                console.error('Error fetching data:', error);
                document.getElementById('status-text').textContent = 'Connection Error';
            }
        }

        function updateDashboard(data) {
            // Update mode badge
            document.getElementById('mode-badge').textContent = data.mode;
            
            // Update daily stats
            document.getElementById('trades-today').textContent = data.daily.total_trades;
            document.getElementById('win-rate').textContent = data.daily.win_rate.toFixed(1) + '%';
            
            const dailyPnl = data.daily.total_profit_usd;
            const dailyPnlElement = document.getElementById('daily-pnl');
            dailyPnlElement.textContent = '$' + dailyPnl.toFixed(2);
            dailyPnlElement.className = 'stat-value ' + (dailyPnl >= 0 ? 'profit-positive' : 'profit-negative');
            
            // Update all-time stats
            const totalPnl = data.all_time.total_profit_usd;
            const totalPnlElement = document.getElementById('total-pnl');
            totalPnlElement.textContent = '$' + totalPnl.toFixed(2);
            totalPnlElement.className = 'stat-value ' + (totalPnl >= 0 ? 'profit-positive' : 'profit-negative');
            
            // Update open position
            if (data.has_open_position && data.open_position) {
                showPosition(data.open_position);
            } else {
                hidePosition();
            }
        }

        function showPosition(position) {
            const section = document.getElementById('position-section');
            const card = document.getElementById('position-card');
            
            section.style.display = 'block';
            
            card.innerHTML = `
                <div class="position-header">
                    <div class="position-symbol">${position.symbol}</div>
                    <div class="position-score">Score: ${position.score.toFixed(2)}/10</div>
                </div>
                <div class="position-details">
                    <div class="position-detail">
                        <div class="position-detail-label">Entry Price</div>
                        <div class="position-detail-value">$${position.entry_price.toFixed(4)}</div>
                    </div>
                    <div class="position-detail">
                        <div class="position-detail-label">Quantity</div>
                        <div class="position-detail-value">${position.quantity.toFixed(4)}</div>
                    </div>
                    <div class="position-detail">
                        <div class="position-detail-label">Entry Time</div>
                        <div class="position-detail-value">${new Date(position.timestamp).toLocaleTimeString()}</div>
                    </div>
                </div>
            `;
        }

        function hidePosition() {
            document.getElementById('position-section').style.display = 'none';
        }

        function updateTrades(trades) {
            const container = document.getElementById('trades-container');
            
            if (!trades || trades.length === 0) {
                container.innerHTML = '<div class="no-data">No trades yet. Waiting for opportunities...</div>';
                return;
            }
            
            let html = `
                <table class="trades-table">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Symbol</th>
                            <th>Entry</th>
                            <th>Exit</th>
                            <th>P&L %</th>
                            <th>P&L $</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
            `;
            
            trades.forEach(trade => {
                const profitClass = trade.profit_percent >= 0 ? 'profit-positive' : 'profit-negative';
                const time = new Date(trade.timestamp).toLocaleTimeString();
                
                html += `
                    <tr>
                        <td>${time}</td>
                        <td><strong>${trade.symbol}</strong></td>
                        <td>$${trade.entry_price.toFixed(4)}</td>
                        <td>${trade.exit_price ? '$' + trade.exit_price.toFixed(4) : '-'}</td>
                        <td class="${profitClass}">${trade.profit_percent ? trade.profit_percent.toFixed(2) + '%' : '-'}</td>
                        <td class="${profitClass}">${trade.profit_usd ? '$' + trade.profit_usd.toFixed(2) : '-'}</td>
                        <td>${trade.status}</td>
                    </tr>
                `;
            });
            
            html += '</tbody></table>';
            container.innerHTML = html;
        }

        function refreshData() {
            fetchData();
        }

        // Initial load
        fetchData();

        // Auto-refresh every 5 seconds
        setInterval(fetchData, 5000);
    </script>
</body>
</html>

